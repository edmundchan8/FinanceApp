@model IEnumerable<FinanceApp.Models.Stock>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Stocks</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Stock" asp-action="Create" class="btn btn-primary">Add Stock</a>
        </div>
    </div>
    <br />


    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Stock Name
                    </th>
                    <th>
                        Stock Ticker
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Overall Cost
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%">@item.StockName</td>
                        <td width="25%">@item.StockTicker</td>
                        <td width="20%">@item.Quantity</td>
                        <td width="15%">Cost</td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No stocks in your portfolio</p>
    }

</div>