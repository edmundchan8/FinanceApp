@model IEnumerable<FinanceApp.Models.Stock>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Stocks</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Stock" asp-action="Create" class="btn btn-primary">Add Stock</a>
        </div>
    </div>
    <br />


    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Date Purchased
                    </th>
                    <th>
                        Stock Name
                    </th>
                    <th>
                        Stock Ticker
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Overall Cost
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var stock in Model)
                {
                    <tr>
                        <td width="20%">@stock.Date</td>
                        <td width="10%">@stock.StockName</td>
                        <td width="10%">@stock.StockTicker</td>
                        <td width="10%">@stock.Quantity</td>
                        <td width="15%">@(stock.BuyPrice * stock.Quantity)</td>
                        <td width="20%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Stock" asp-action="Update" asp-route-Id="@stock.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Stock" asp-action="Delete" asp-route-Id="@stock.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No stocks in your portfolio</p>
    }

</div>