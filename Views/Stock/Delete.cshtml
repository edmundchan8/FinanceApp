@model FinanceApp.Models.Stock

<form method="post" asp-action="DeleteConfirmed">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Stock Entry</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="StockName"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="StockTicker"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Quantity"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="BuyPrice"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="StockName" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="StockTicker" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Quantity" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="BuyPrice" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>